<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Word Search</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    .word-list {
      margin-bottom: 20px;
    }
    .word-search-grid td {
      width: 30px;
      height: 30px;
      text-align: center;
      vertical-align: middle;
      cursor: pointer; /* Indicates clickable items */
    }
    .word-search-grid td a {
      display: block;
      width: 100%;
      height: 100%;
      color: black; /* Ensures text color is consistent */
      text-decoration: none; /* Removes underline from links */
    }
    /* Optional: hover effect for grid cells */
    .word-search-grid td a:hover {
      background-color: #f0f0f0;
    }
  </style>
</head>
<body>
 <br><br><br>
  <div class="container">
  <!-- Form for searching words -->
  <div class="row align-items-end">
    <div class="col-sm-9">
      <input type="text" class="form-control" id="word" name="word" placeholder="Type a word" form="wordSearchForm">
    </div>
    <div class="col-sm-3">
      <button type="submit" class="btn btn-primary" form="wordSearchForm">Search</button>
    </div>
  </div>
  <!-- Flash Message for Errors -->
  <% if (error) { %>
  <div class="alert alert-danger mt-2" role="alert">
    <%= error %>
  </div>
  <% } %>
  <div class="row mt-4">
    <div class="col-md-6">
      <h2>Word List:</h2>
      <ul class="word-list">
        <% data.forEach(function(dataItem) { %>
        <li><%= dataItem.word %></li>
        <% }) %>
      </ul>
    </div>
    <div class="col-md-6">
      <h2>Word Search Grid:</h2>
      <table class="word-search-grid">
        <% grid.forEach(function(row) { %>
        <tr>
          <% row.forEach(function(cell) { %>
          <td>
            <a href="#" onclick="alert('Clicked on <%= cell %>');"><%= cell %></a>
          </td>
          <% }) %>
        </tr>
        <% }) %>
      </table>
    </div>
  </div>
</div>
<form id="wordSearchForm" action="/" method="get" class="d-none"></form>

</body>
</html>
<!-- Add this script inside your index.ejs within the <head> or just before closing the <body> -->
<script>
  let selectedLetters = '';

  function selectLetter(letter) {
    selectedLetters += letter;
    document.getElementById('selectedWord').value = selectedLetters;
  }

  async function submitWord() {
    const selectedWord = document.getElementById('selectedWord').value;
    // Simple fetch request to send the selectedWord to the server
    const response = await fetch('/submit-selection', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ selectedWord }),
    });
    const data = await response.json();
    alert(data.message); // Simple way to show feedback
    if (data.success) {
      // Reset for the next selection
      selectedLetters = '';
      document.getElementById('selectedWord').value = '';
      // Update the UI as necessary to reflect the word bank change
    }
  }
</script>


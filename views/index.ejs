<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Word Search</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    .word-list {
      margin-bottom: 20px;
    }
    .word-search-grid td {
      width: 30px;
      height: 30px;
      text-align: center;
      vertical-align: middle;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
    .selected {
      background-color: #007bff;
      color: white;
    }
  </style>
</head>
<body>
 <br><br><br>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h2>Word List:</h2>
        <ul class="word-list">
          <% data.forEach(function(data) { %>
            <li><%= data.word %></li>
          <% }) %>
        </ul>
      </div>
      <div class="col-md-6">
        <h2>Word Search Grid:</h2>
        <table class="word-search-grid">
          <% grid.forEach(function(row, rowIndex) { %>
            <tr>
              <% row.forEach(function(cell, cellIndex) { %>
                <td onclick="selectLetter(this, '<%= cell %>', <%= rowIndex %>, <%= cellIndex %>)" 
                    id="cell-<%= rowIndex %>-<%= cellIndex %>"><%= cell %></td>
              <% }) %>
            </tr>
          <% }) %>
        </table>
      </div>
    </div>
    <button onclick="submitWord()">Submit</button>
    <button onclick="clearSelection()">Clear</button>
  </div>
  <script>
    let selectedLetters = '';
    let lastSelectedCell = null;

    function isNeighbor(rowIndex, cellIndex) {
      if (lastSelectedCell === null) return true;
      const [lastRow, lastCell] = lastSelectedCell;
      const rowDiff = Math.abs(lastRow - rowIndex);
      const cellDiff = Math.abs(lastCell - cellIndex);
      return rowDiff <= 1 && cellDiff <= 1;
    }

    function selectLetter(cell, letter, rowIndex, cellIndex) {
      if (isNeighbor(rowIndex, cellIndex) || selectedLetters.length === 0) {
        if (cell.classList.contains('selected')) {
          cell.classList.remove('selected');
          selectedLetters = selectedLetters.replace(letter, '');
        } else {
          cell.classList.add('selected');
          selectedLetters += letter;
          lastSelectedCell = [rowIndex, cellIndex];
        }
        console.log(selectedLetters);
      }
    }

    async function submitWord() {
      console.log("Submitting:", selectedLetters);
      // Implement submission logic here...
      // Reset after submission for demonstration
      selectedLetters = '';
      lastSelectedCell = null;
      document.querySelectorAll('.selected').forEach(cell => cell.classList.remove('selected'));
    }

    function clearSelection() {
      selectedLetters = '';
      lastSelectedCell = null;
      document.querySelectorAll('.selected').forEach(cell => cell.classList.remove('selected'));
      console.log("Cleared selection");
    }
  </script>
</body>
</html>
